.flip-num {
  float: left;
  display: block;
  margin-right: 3.16844%;
  width: 8.29472%;
  font-family: "Oswald", sans-serif;
  border-radius: 10px;
  border: 4px solid #333;
  border-right: 5px solid #666;
  border-left: 5px solid #444;
  border-top: 4px solid #777; }
  .flip-num:last-child {
    margin-right: 0; }
  .flip-num h2 {
    float: left;
    display: block;
    margin-right: 3.16844%;
    width: 8.29472%; }
    .flip-num h2:last-child {
      margin-right: 0; }

.flip-num:first-child {
  font-style: italic; }

.up {
  top: 0;
  border-radius: 5px 5px 0px 0px; }

.down {
  bottom: 0;
  border-radius: 0 0 5px 5px; }

/* uses "after" psudo element to create
"up arrow" and "down arrow" */
.up:after {
  height: 0;
  width: 0;
  border-color: transparent;
  border-style: solid;
  border-width: 7.5px;
  border-bottom-color: gray; }

.down:after {
  height: 0;
  width: 0;
  border-color: transparent;
  border-style: solid;
  border-width: 7.5px;
  border-top-color: gray; }

/* flip height
--------------
4px border : top and bottom
8px
---
10px arrows : top and bottom
20px
----
2px margin : for the arrows
4px
===
32px total
*/
.flip-num input {
  position: relative;
  font-family: "Oswald", sans-serif;
  font-weight: 700;
  font-size: 3em;
  height: 80px;
  text-align: center;
  background: #222;
  padding: 0px;
  border: 2px inset #444;
  color: white;
  width: 100%; }

.flip-num button {
  position: relative;
  background: #ddd;
  width: 100%; }

.flip-num button:focus,
.flip-num input:focus {
  outline: none; }

.flip-num button:after {
  content: " ";
  display: block;
  margin: 1px auto; }

#phone_popup {
  position: absolute; }
/* 
Removes default up/down buttons
http://stackoverflow.com/questions/3790935/can-i-hide-the-html5-number-inputs-spin-box
(chrome/safari support only)
*/
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0; }

