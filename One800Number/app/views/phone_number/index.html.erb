<h1>1-800 Numbers: America's #1 Phone Number Name Lookup!</h1>

<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:phone_number, "Phone Number:") %>
  <%= telephone_field(:number, :phone_number) %>
  <%= label_tag(:word_size, "Word Size:") %>
  <%= number_field(:number, :size) %>
  <%= submit_tag("Search") %>
<% end %>

